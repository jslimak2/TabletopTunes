{
  "name": "tabletop-tunes",
  "version": "1.0.0",
  "description": "The ultimate board game soundtrack player that suggests movie soundtracks to match your tabletop games",
  "main": "electron-main.js",
  "scripts": {
    "build": "echo 'Build completed - static files ready'",
    "serve": "python3 -m http.server 8000",
    "dev": "python3 -m http.server 8000",
    "capacitor:add:android": "npx cap add android",
    "capacitor:sync": "npx cap sync",
    "capacitor:open:android": "npx cap open android",
    "android:build": "npx cap sync && npx cap copy && npx cap open android",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "keywords": [
    "board-games",
    "soundtrack",
    "music",
    "tabletop",
    "pwa",
    "mobile",
    "android",
    "desktop"
  ],
  "author": "TabletopTunes Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jslimak2/TabletopTunes.git"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/app": "^6.0.0",
    "@capacitor/haptics": "^6.0.0",
    "@capacitor/keyboard": "^6.0.0",
    "@capacitor/status-bar": "^6.0.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.tabletoptunes.app",
    "productName": "TabletopTunes",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist-electron",
      "!android",
      "!ios"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "icons/icon-512x512.png"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon-512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons/icon-512x512.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}